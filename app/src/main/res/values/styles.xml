<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button theme-->
    <style name="CustomButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_background_button</item>
        <item name="android:textColor">@color/color_text_button</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:layout_marginTop">@dimen/margin_top_button</item>

        <item name="android:onClick">showToast</item>
    </style>
</resources>
